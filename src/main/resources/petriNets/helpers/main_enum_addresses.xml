	<id>main_enum_addresses</id>
	<initials>MEA</initials>
	<title>Main enumeration addresses</title>
	<defaultRole>true</defaultRole>
	<transitionRole>false</transitionRole>
	<!-- TRANSACTIONS -->
	<!-- ROLES -->
	<!-- PROCESS ROLE REFS -->
	<!-- PROCESS USER REFS -->
	<!-- DATA -->
	<data type="file">
		<id>import_file_cities</id>
		<title name="import_file_cities">Import a file of cities to process</title>
	</data>
	<data type="file">
		<id>import_file_streets</id>
		<title name="import_file_streets">Import a file of streets to process</title>
	</data>
	<data type="enumeration_map">
		<id>system_cities</id>
		<title>system_cities</title>
		<options>
			<option key="90023">Viničné</option>
			<option key="90201">Pezinok</option>
			<option key="01401">Bytča</option>
		</options>
	</data>
	<data type="enumeration_map">
		<id>system_streets</id>
		<title>system_streets</title>
		<options>
			<option key="0-90023">Brezová</option>
			<option key="1-90023">Hlavná</option>
			<option key="2-90201">Trnavská</option>
			<option key="3-90201">Viničiarska</option>
			<option key="4-90201">Bratislavská</option>
      	  	<option key="5-01401">Smetankova</option>
			<option key="6-01401">Marianova</option>
		</options>
	</data>
	<data type="number">
		<id>child_enumeration</id>
		<title name="child_enumeration">Child enumerations</title>
		<desc name="child_enumeration_desc">Number of requests processed</desc>
		<init>0</init>
		<action trigger="get">
			child_enumeration: f.child_enumeration;
			// TODO: groupid
			def cases = findCases( {it.processIdentifier.eq("child_enum_addresses")} )
			change child_enumeration value { return cases?.size(); }
		</action>
	</data>
	<data type="text">
		<id>status</id>
		<title name="status">Status</title>
	</data>
	<data type="dateTime">
		<id>initialization_date</id>
		<title name="initialization_date">Initialization date</title>
	</data>
	<data type="dateTime">
		<id>last_imported_file</id>
		<title name="last_imported_file">Date of last change</title>
		<desc name="last_imported_file_desc">Date when last import has been made</desc>
	</data>
	<!-- I18NS -->
	<i18n locale="sk">
		<i18nString name="import_file_cities">Vlož súbor miest</i18nString>
		<i18nString name="import_file_streets">Vlož súbor ulíc</i18nString>
		<i18nString name="status">Stav</i18nString>
		<i18nString name="initialization_date">Dátum inicializácie inštancie</i18nString>
		<i18nString name="last_imported_file">Dátum poslednej zmeny</i18nString>
		<i18nString name="last_imported_file_desc">Dátum kedy bolo posledné vloženie vykonané</i18nString>
		<i18nString name="child_enumeration">Detské enumerácie</i18nString>
		<i18nString name="child_enumeration_desc">Počet detských enumerácií</i18nString>
		<i18nString name="t_import">Vlož súbor</i18nString>
		<i18nString name="t_status">Pozri stav</i18nString>
	</i18n>
	<i18n locale="de">
		<i18nString name="import_file_cities">Eine Datei einfügen</i18nString>
		<i18nString name="import_file_streets">Eine Datei einfügen</i18nString>
		<i18nString name="status">Status</i18nString>
		<i18nString name="initialization_date">Datum der Instanzinitialisierung</i18nString>
		<i18nString name="last_imported_file">Datum der letzten Änderung</i18nString>
		<i18nString name="last_imported_file_desc">Datum des letzten Imports</i18nString>
		<i18nString name="child_enumeration">Untergeordnete Aufzählungen</i18nString>
		<i18nString name="child_enumeration_desc">Anzahl untergeordneter Aufzählungen</i18nString>
		<i18nString name="t_import">Datei einfügen</i18nString>
		<i18nString name="t_status">Status ansehen</i18nString>
	</i18n>
	<!-- TRANSITIONS -->
	<transition>
		<id>t_status</id>
		<x>300</x>
		<y>620</y>
		<layout>
			<offset>0</offset>
		</layout>
		<label name="t_status"> Check status</label>
		<dataGroup>
			<id>DataGroup</id>
			<stretch>true</stretch>
			<dataRef>
				<id>child_enumeration</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>status</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>initialization_date</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>last_imported_file</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
			</dataRef>
		</dataGroup>
		<event type="cancel">
			<title></title>
		</event>
		<event type="assign">
			<title></title>
		</event>
		<event type="finish">
			<title></title>
		</event>
		<event type="delegate">
			<title></title>
		</event>
	</transition>
	<transition>
		<id>t_distribute_data</id>
		<x>660</x>
		<y>620</y>
		<layout>
			<offset>0</offset>
		</layout>
		<label>Distribute data [auto]</label>
		<trigger type="auto"/>
		<event type="assign">
			<id>0</id>
			<actions phase="post">
				<action>
					system_cities: f.system_cities,
					system_streets: f.system_streets;
					// todo: change group id
					def childEnums = findCases( {it.processIdentifier.eq("child_enum_addresses")} )
					if(childEnums == null)
						return

					for(caze in childEnums){
						caze.dataSet.get("cities")?.options = system_cities.options
						caze.dataSet.get("system_streets")?.options = system_streets.options
						workflowService.save(caze)
					}
				</action>
			</actions>
		</event>
	</transition>
	<transition>
		<id>t_process_import</id>
		<x>1100</x>
		<y>620</y>
		<layout>
			<offset>0</offset>
		</layout>
		<label>Process the import [auto]</label>
		<trigger type="auto"/>
		<event type="assign">
			<id>0</id>
			<actions phase="pre">
				<action>
					status: f.status;
					change status value {"Processing in progress"; }
				</action>
			</actions>
			<actions phase="post">
				<action>
					// todo: file processing here (call ActionDelegate function)
				</action>
			</actions>
		</event>
		<event type="finish">
			<id>t_process_import_finish</id>
			<actions phase="post">
				<action>
					status: f.status;
					change status value { "Import processed"; }
				</action>
				<action>
					last_imported_file: f.last_imported_file;
					change last_imported_file value { java.time.LocalDateTime.now(); }
				</action>
			</actions>
		</event>
	</transition>
	<transition>
		<id>t_init</id>
		<x>460</x>
		<y>420</y>
		<layout>
			<offset>0</offset>
		</layout>
		<label>Initialize [auto]</label>
		<trigger type="auto"/>
		<event type="assign">
			<id>t_init_assign</id>
			<actions phase="post">
			<action>
				changeCaseProperty "title" about { "Addresses enumeration – importing data" }
			</action>
			</actions>
		</event>
		<event type="finish">
			<id>t_init_finish</id>
			<actions phase="post">
				<action>initialization_date: f.initialization_date,
				status: f.status;

				change initialization_date value {  java.time.LocalDateTime.now();}
				change status value { "Created"; }
				</action>
			</actions>
		</event>
	</transition>
	<transition>
		<id>t_import</id>
		<x>860</x>
		<y>420</y>
		<layout>
			<offset>0</offset>
		</layout>
		<label>Import data</label>
		<assignPolicy>auto</assignPolicy>
		<dataGroup>
			<id>dg1</id>
			<stretch>true</stretch>
			<dataRef>
				<id>import_file_cities</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
			</dataRef>
		</dataGroup>
		<dataGroup>
			<id>dg2</id>
			<stretch>true</stretch>
			<dataRef>
				<id>import_file_streets</id>
				<logic>
					<behavior>editable</behavior>					
				</logic>
			</dataRef>
		</dataGroup>
		<event type="finish">
			<id>0</id>
			<actions phase="pre">
				<action>
					// todo: validate file structure (call ActionDelegate function)
					throw new IllegalArgumentException("Import has not been implemented yet")
				</action>
			</actions>
			<actions phase="post">
				<action>
					last_import_date: f.last_imported_file;
					change last_import_date value { java.time.LocalDateTime.now(); }
				</action>
				<action>
					status: f.status;
					change status value { "File is imported"; }
				</action>
			</actions>
		</event>
	</transition>
	<!-- PLACES -->
	<place>
		<id>p6</id>
		<x>460</x>
		<y>620</y>
		<label>created</label>
		<tokens>0</tokens>
		<static>false</static>
	</place>
	<place>
		<id>p4</id>
		<x>860</x>
		<y>620</y>
		<label>Import processed</label>
		<tokens>0</tokens>
		<static>false</static>
	</place>
	<place>
		<id>p3</id>
		<x>1100</x>
		<y>420</y>
		<label></label>
		<tokens>0</tokens>
		<static>false</static>
	</place>
	<place>
		<id>p2</id>
		<x>660</x>
		<y>420</y>
		<label>initialized</label>
		<tokens>0</tokens>
		<static>false</static>
	</place>
	<place>
		<id>p1</id>
		<x>300</x>
		<y>420</y>
		<label>uninitialized</label>
		<tokens>1</tokens>
		<static>false</static>
	</place>
	<!-- ARCS -->
	<arc>
